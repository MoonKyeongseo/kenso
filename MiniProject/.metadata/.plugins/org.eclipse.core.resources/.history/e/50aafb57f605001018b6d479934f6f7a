        try (AudioInputStream audioStream = AudioSystem.getAudioInputStream(audioFile)) {
            Clip clip = AudioSystem.getClip();
            clip.open(audioStream);
            clip.start();

            Thread.sleep(clip.getMicrosecondLength() / 1000); // ì¬ìƒ ì‹œê°„ë§Œí¼ ëŒ€ê¸°
        } catch (Exception e) {
            System.err.println("ğŸ”´ ì˜¤ë””ì˜¤ ì¬ìƒ ì¤‘ ì˜¤ë¥˜ ë°œìƒ: " + e.getMessage());
        }
    }
}
