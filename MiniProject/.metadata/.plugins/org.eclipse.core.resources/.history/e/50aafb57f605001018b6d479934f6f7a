package Model;

import java.io.File;
import javax.sound.sampled.*;

public class SoundDAO {
    public void playAudio(SoundDTO soundDTO) {
        File audioFile = new File(soundDTO.getFilePath());
        if (!audioFile.exists()) {
            System.out.println("âŒ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤: " + soundDTO.getFilePath());
            return;
